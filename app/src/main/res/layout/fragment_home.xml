        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="700dp"
        android:src="@drawable/home_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HomeMyShoesTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:text="내 신발"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeProfileBoxImage" />

    <TextView
        android:id="@+id/HomeEditShoesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="1dp"
        android:alpha="0.8"
        android:text="꾸미러 가기"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/HomeShoesBoxImage"
        app:layout_constraintEnd_toEndOf="@+id/HomeShoesBoxImage" />

    <TextView
        android:id="@+id/HomeUserTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp"
        android:text="로그인 하세요"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/HomeProfileBoxImage"
        app:layout_constraintStart_toEndOf="@+id/HomeProfileImage" />

    <TextView
        android:id="@+id/HomeTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="오늘도 활기차게 달려볼까요?"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/HomeUserTitleText"
        app:layout_constraintStart_toEndOf="@+id/HomeProfileImage" />

    <TextView
        android:id="@+id/HomeMyCollectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="내 지비츠"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
