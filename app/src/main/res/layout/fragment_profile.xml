<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SWW_Theme_Color"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/ProfileUserBox"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/home_profilebox"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ProfileUserImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/ProfileUserBox"
        app:layout_constraintStart_toStartOf="@+id/ProfileUserBox"
        app:layout_constraintTop_toTopOf="@+id/ProfileUserBox"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/home_profile_image" />

    <TextView
        android:id="@+id/ProfileUserTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp"
        android:text="로그인 하세요"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ProfileUserBox"
        app:layout_constraintStart_toEndOf="@+id/ProfileUserImage" />

    <TextView
        android:id="@+id/ProfileTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="사용자 프로필"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileUserTitleText"
        app:layout_constraintStart_toEndOf="@+id/ProfileUserImage" />

    <ImageView
        android:id="@+id/ProfileNameBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/login_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileUserBox" />

    <ImageView
        android:id="@+id/ProfileGenderBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileNameBox" />

    <ImageView
        android:id="@+id/ProfileHightBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileGenderBox" />

    <ImageView
        android:id="@+id/ProfileWeightBox"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileHightBox" />

    <TextView
        android:id="@+id/chartTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Activity Records"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ProfileWeightBox"
        app:layout_constraintTop_toBottomOf="@id/ProfileWeightBox" />

    <TextView
        android:id="@+id/chartDate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="2023년 06월 26일 월요일"
        android:textColor="#E2E2E2"
        app:layout_constraintStart_toStartOf="@id/chartTitle_tv"
        app:layout_constraintTop_toBottomOf="@id/chartTitle_tv" />

    <ImageButton
        android:id="@+id/periodSelect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/period_choice_btn"
        app:layout_constraintEnd_toEndOf="@id/ProfileWeightBox"
        app:layout_constraintTop_toTopOf="@id/chartTitle_tv" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/work_bchart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chartDate_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>