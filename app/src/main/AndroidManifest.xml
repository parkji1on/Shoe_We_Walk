<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<!--    위치 정보 동의-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<!--    걸음수 측정을 위한 센서 동의-->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>
<!--    retrofit2 통신을 위한 인터넷 연결-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoe_We_Walk"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
<!--        retrofit 통신 단계에서 security policy가 뜸 ->
I/okhttp.OkHttpClient:  HTTP FAILED: java.net.UnknownServiceException: CLEARTEXT communication to 3.37.186.27 not permitted by network security policy
D/CONNECTION FAILURE :: CLEARTEXT communication to 3.37.186.27 not permitted by network security policy

-->
        <activity
            android:name=".WalkActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="st2usgelk4" />
    </application>

</manifest>