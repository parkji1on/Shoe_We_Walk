<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/itemCircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/market_jibbitscircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@color/BoxColor" />

    <ImageView
        android:id="@+id/itemJibbits"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/jibbits_bee_front"
        app:layout_constraintBottom_toBottomOf="@+id/itemCircle"
        app:layout_constraintEnd_toEndOf="@+id/itemCircle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/itemCircle"
        app:layout_constraintTop_toTopOf="@+id/itemCircle"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>