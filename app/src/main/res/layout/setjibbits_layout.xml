<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="420dp"
    android:background="@drawable/dialog_jibbits_buy_background">

    <TextView
        android:id="@+id/Dialog_JibbitsBuyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지비츠 장착"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/Dialog_BuyButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/dialog_jibbits_set_okbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Dialog_CancelButton" />

    <ImageView
        android:id="@+id/Dialog_CancelButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/dialog_jibbits_buy_cancelbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Dialog_BuyButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="256dp"
        android:layout_height="187dp"
        app:srcCompat="@drawable/shoes_basic"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="97dp" />
</androidx.constraintlayout.widget.ConstraintLayout>