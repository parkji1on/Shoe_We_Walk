<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="420dp"
    android:background="@drawable/dialog_jibbits_buy_background">

    <TextView
        android:id="@+id/dialog_HelperIDXText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="해당위치의 지비츠가 해제됩니다."
        android:alpha="0.7"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_MainShoesImage" />

    <ImageView
        android:id="@+id/Dialog_CancelButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/dialog_jibbits_buy_cancelbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Dialog_UnSetButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Dialog_JibbitsBuyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="지비츠 해제"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Dialog_UnSetButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/dialog_jibbits_set_unsetbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Dialog_CancelButton" />

    <ImageView
        android:id="@+id/Dialog_MainShoesImage"
        android:layout_width="256dp"
        android:layout_height="187dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_JibbitsBuyTitle"
        app:srcCompat="@drawable/shoes_basic" />

    <ImageView
        android:id="@+id/Dialog_MainHelperImage"
        android:layout_width="256dp"
        android:layout_height="187dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dialog_JibbitsBuyTitle"
        app:srcCompat="@drawable/jibbits_guide_1"
        app:tint="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>