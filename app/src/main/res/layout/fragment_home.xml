    <ImageView
        android:id="@+id/HomeMyJibbitsBox"
        android:visibility="invisible"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/jibbits_none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeMyCollectionText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HomeMyJibbitsItemRecyclerView"
        android:layout_width="330dp"
        android:layout_height="110dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/HomeMyJibbitsBox"
        app:layout_constraintEnd_toEndOf="@+id/HomeMyJibbitsBox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/HomeMyJibbitsBox"
        app:layout_constraintTop_toTopOf="@+id/HomeMyJibbitsBox"
        app:layout_constraintVertical_bias="0.5" />


    <ImageView
        android:id="@+id/HomeProfileBoxImage"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/home_profilebox"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/HomeProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/HomeProfileBoxImage"
        app:layout_constraintStart_toStartOf="@+id/HomeProfileBoxImage"
        app:layout_constraintTop_toTopOf="@+id/HomeProfileBoxImage"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/home_profile_image" />

    <ImageView
        android:id="@+id/HomeShoesBoxImage"
        android:layout_width="350dp"
